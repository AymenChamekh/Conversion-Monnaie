<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtxtMonnaie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Montant"
        android:inputType="numberDecimal"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>


    <RadioGroup
        android:id="@+id/groupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtxtMonnaie"
        android:layout_marginTop="20dp">


        <RadioButton
            android:id="@+id/btnDinarEuro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:checked="true"

            android:text="Dinar Tunisien->Euro"/>

        <RadioButton
            android:id="@+id/btnEuroDinar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:checked="false"
            android:text="Euro-> Dinar Tunisien"/>

    </RadioGroup>


    <Button
        android:id="@+id/BtnConvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/Convert"
        android:layout_below="@id/groupBtn"
        android:layout_centerInParent="true"
        />


    <TextView
        android:text="@string/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textResult"
        android:layout_centerInParent="true"

        />

</RelativeLayout>




